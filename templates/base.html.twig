        <link rel="stylesheet" href="{{ asset('styles/theme.css') }}">
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
        {% endblock %}
    </head>
    <body>
        <header>
            <a class="hero-link" href="/" title=""><h1>MyBad !</h1></a>
